{
  "extends": ["next/core-web-vitals", "prettier", "plugin:storybook/recommended"],
  "plugins": ["unused-imports"],
  "rules": {
    "quotes": "error",
    "jsx-quotes": "error",
    "semi": "error",
    "indent": ["error", 2],
    "unused-imports/no-unused-imports": "error",
    "import/order": [
      "error",
      {
        "groups": [
          "builtin",
          "external",
          "internal",
          "object",
          "type",
          "index",
          "parent",
          "sibling"
        ]
      }
    ]
  }
}
