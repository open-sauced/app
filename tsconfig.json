{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "module": "ESNext",
    "baseUrl": "./",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "types": ["vitest/globals"]
  },
  "include": [
    "next-env.d.ts",
    "next-types.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "components/molecules/DevToSocialImage",
    "next.config.js"
  ],
  "exclude": ["node_modules", "netlify/edge-functions"]
}
